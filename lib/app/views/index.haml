.container
  .col-md-3
  .col-md-6
    %h1 Feeling Inspired?
    %h4 Add your latest and greatest ideas here.
    %form{action: "/", method: "POST", role: "form"}
      .form-group#idea-title
        %input.form-control{name: "idea[title]", placeholder: "Title", type: "text"}
      .form-group#idea-description
        %textarea.form-control{name: "idea[description]", placeholder: "Description", type: "text"}
      .form-group
        %input.btn.btn-primary{type: "submit", value: "Submit"}
  .col-md-3
